generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String @id
  email             String
  age               Int 
  sex               String @default("L")
  username          String @unique
  password          String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  sleepTracker      SleepTracker[]
  eatTracker        EatTracker[]
  screenTimeTracker ScreenTimeTracker[]
  journalTracker  JournalTracker[]
  reminderTracker ReminderTracker[]
}

model SleepTracker {
  id          String @id
  userId      String?
  sleepStart  Int
  sleepEnd    Int
  duration    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User? @relation(fields: [userId], references: [id])
}

model EatTracker {
  id          String @id
  userId      String?
  meal_type   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User? @relation(fields: [userId], references: [id])
}

model ScreenTimeTracker {
  id              String @id
  userId          String?
  duration        Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User? @relation(fields: [userId], references: [id])
}

model JournalTracker {
  id String @id
  userId String?
  mood String
  title String
  description String
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
  user User? @relation(fields: [userId], references: [id])
}

model ReminderTracker {
  id String @id
  userId String?
  sleepStatus String
  eatStatus String
  screenTimeStatus String
  sleepMessage String
  eatMessage String
  screenTimeMessage String
  date DateTime        // <── ini WAJIB untuk tracking per hari
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user User? @relation(fields: [userId], references: [id])

  @@unique([userId, date])
}
